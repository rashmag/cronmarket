<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state -->
    <item android:drawable="@drawable/bg_first_address_selection_city_disabled" android:state_enabled="false" />
    <!-- pressed state -->
    <item android:drawable="@drawable/bg_first_address_selection_city_disabled" android:state_enabled="true" android:state_pressed="true" android:state_window_focused="true" />
    <!-- unselected state -->
    <item android:drawable="@drawable/bg_first_address_selection_city_disabled" android:state_enabled="true" android:state_window_focused="true" />
    <!-- dropdown list state -->
    <item android:drawable="@drawable/bg_first_address_selection_city_disabled" android:state_enabled="true" android:state_focused="true" />
    <!-- default -->
    <item android:drawable="@drawable/bg_first_address_selection_city_enabled" />
</selector>