<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/grey2</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="popupMenuStyle">@style/PopUpMenuStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey90</item>
    </style>

    <style name="FirstAddressSelectionCityPopUp">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
    </style>

    <style name="PopUpMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownVerticalOffset">15dp</item>
    </style>

    <style name="Widget.App.TabLayout.MarketCategories" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/MarketCategoriesTabLayout</item>
        <item name="tabTextAppearance">@style/MarketCategoriesTabTextAppearance</item>
    </style>

    <style name="MarketCategoriesTabLayout">
        <item name="colorPrimary">@color/brand</item>
    </style>

    <style name="MarketCategoriesTabTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="CircleImageLogo">
        +        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageViewCategory">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="DrawerMenuItem">
        <item name="android:drawablePadding">15dp</item>
        <item name="paddingStart">19dp</item>
        <item name="paddingEnd">19dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/drawer_menu_item</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_rounded_corners</item>
    </style>


    <style name="OrderingTabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sf_pro_text_semibold</item>
    </style>

    <style name="AcquiringThemeCustom" parent="AcquiringTheme">
        <item name="acqButtonStyle">@style/AcquiringButtonStyle.Custom</item>

    </style>

    <style name="AcquiringButtonStyle.Custom" parent="AcquiringButtonStyle.Base">
        <item name="background">@color/brand</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadiogroupStyle">
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_12</item>
        <item name="android:paddingBottom">@dimen/dimen_12</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_btn_select_payment</item>
    </style>

</resources>