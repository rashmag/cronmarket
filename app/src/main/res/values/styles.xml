<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/grey2</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="TextHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey90</item>
    </style>

    <style name="FirstAddressSelectionCityPopUp">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
    </style>

    <style name="Widget.App.TabLayout.MarketCategories" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/MarketCategoriesTabLayout</item>
    </style>

    <style name="MarketCategoriesTabLayout">
        <item name="colorPrimary">@color/brand</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>